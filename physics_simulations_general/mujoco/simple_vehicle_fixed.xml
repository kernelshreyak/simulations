
<mujoco>
  <option timestep="0.002" gravity="0 0 -9.81"/>
  <compiler angle="degree"/>

  <default>
    <geom friction="1.5 0.1 0.1" density="800"/>
  </default>

  <worldbody>

    <!-- Ground -->
    <geom type="plane" size="10 10 0.1" rgba="0.9 0.9 0.9 1"/>

    <!-- Vehicle chassis -->
    <body name="chassis" pos="0 0 0.35">
      <geom type="box" size="0.3 0.2 0.1" rgba="0.2 0.2 0.8 1"/>

      <!-- Rear left wheel -->
      <body pos="-0.25  0.20 -0.15">
        <joint name="wheel_rl" type="hinge" axis="0 1 0"/>
        <geom type="cylinder"
              size="0.08 0.04"
              quat="0.7071 0 0.7071 0"
              rgba="0 0 0 1"/>
      </body>

      <!-- Rear right wheel -->
      <body pos="-0.25 -0.20 -0.15">
        <joint name="wheel_rr" type="hinge" axis="0 1 0"/>
        <geom type="cylinder"
              size="0.08 0.04"
              quat="0.7071 0 0.7071 0"
              rgba="0 0 0 1"/>
      </body>

      <!-- Front left wheel -->
      <body pos="0.25  0.20 -0.15">
        <joint name="wheel_fl" type="hinge" axis="0 1 0"/>
        <geom type="cylinder"
              size="0.08 0.04"
              quat="0.7071 0 0.7071 0"
              rgba="0 0 0 1"/>
      </body>

      <!-- Front right wheel -->
      <body pos="0.25 -0.20 -0.15">
        <joint name="wheel_fr" type="hinge" axis="0 1 0"/>
        <geom type="cylinder"
              size="0.08 0.04"
              quat="0.7071 0 0.7071 0"
              rgba="0 0 0 1"/>
      </body>

    </body>
  </worldbody>

  <actuator>
    <motor joint="wheel_rl" gear="40"/>
    <motor joint="wheel_rr" gear="40"/>
    <motor joint="wheel_fl" gear="40"/>
    <motor joint="wheel_fr" gear="40"/>
  </actuator>

</mujoco>
